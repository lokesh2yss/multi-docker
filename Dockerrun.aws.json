{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    
    {
      "name": "postgres",
      "image": "lokesh2yss/multi-postgres",
      "hostname": "postgres",
      "essential": false,
      "memory": 128
    },
    {
      "name": "client",
      "image": "lokesh2yss/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "lokesh2yss/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "links": ["postgres"]
    },
    {
      "name": "worker",
      "image": "lokesh2yss/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
       "name" : "nginx",
       "image": "lokesh2yss/multi-nginx",
       "hostname": "nginx",
       "essential": true,
       "memory": 128,
       "portMappings": [
         {
 	  "hostPort": 80,
          "containerPort": 80
         }
       ],
       "links": ["client","server"]
        
    }

  ]

}
